<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddItemActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <GridLayout
            android:id="@+id/gridLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1" >

            <TextView
                android:id="@+id/textView1"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="1"
                android:text="Add New Item"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/itemName"
                android:layout_width="match_parent"
                android:layout_column="0"
                android:layout_gravity="right|top"
                android:layout_row="2"
                android:ems="10"
                android:hint="Name"
                android:inputType="text" />

            <EditText
                android:id="@+id/itemDesc"
                 android:hint="Description"
                android:layout_width="match_parent"
                android:layout_column="0"
                android:layout_gravity="right|top"
                android:layout_row="3"
                android:ems="10"
                android:inputType="textMultiLine" />

            <EditText
                android:id="@+id/itemState"
                 android:hint="State"
                android:layout_width="match_parent"
                android:layout_column="0"
                android:layout_gravity="right|top"
                android:layout_row="5"
                android:ems="10" />

            <EditText
                android:id="@+id/itemCity"
                 android:hint="City"
                android:layout_width="match_parent"
                android:layout_column="0"
                android:layout_gravity="right|top"
                android:layout_row="4"
                android:ems="10" />

            <EditText
                android:id="@+id/itemReward"
                android:layout_width="match_parent"
                android:layout_column="0"
                android:layout_gravity="right|top"
                android:layout_row="6"
                android:ems="10"
                android:hint="Reward"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView7"
                android:layout_column="0"
                android:layout_gravity="left|center_vertical"
                android:layout_row="7"
                android:text="Date Found"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView8"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="9"
                android:text="Category"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView9"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="11"
                android:text="Type"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:id="@+id/cancel_add"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="13"
                android:text="Cancel" />

            <Button
                android:id="@+id/addItem"
                android:layout_column="0"
                android:layout_gravity="right|top"
                android:layout_row="13"
                android:text="Add" />

            <DatePicker
                android:id="@+id/datePickerItem"
                android:layout_column="0"
                android:layout_gravity="center_horizontal|top"
                android:layout_row="8"
                android:calendarViewShown="false" />

            <RadioGroup
                android:id="@+id/radioGroupCat"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="10" >

                <RadioButton
                    android:id="@+id/radioAnt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Antique" />

                <RadioButton
                    android:id="@+id/radioMisc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Misc" />

                 <RadioButton
                android:id="@+id/radioPersonal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="center_horizontal|top"
                android:layout_row="10"
                android:text="Personal" />
            </RadioGroup>

           

            <RadioGroup
                android:id="@+id/radioGroupType"
                android:layout_column="0"
                android:layout_gravity="left|top"
                android:layout_row="12" >

                <RadioButton
                    android:id="@+id/radioLost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Lost" />
                <RadioButton
                android:id="@+id/radioFound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="right|top"
                android:layout_row="12"
                android:text="Found" />
            </RadioGroup>

            
        </GridLayout>

    </ScrollView>

</RelativeLayout>